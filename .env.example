# AI Options Trader Agent - Environment Configuration

# Broker API Configuration

# OpenAlgo Configuration (Recommended)
OPENALGO_API_KEY=your_openalgo_api_key_here
OPENALGO_HOST=http://127.0.0.1:5000

# Upstox API Configuration (Direct Integration)
UPSTOX_API_KEY=your_upstox_api_key_here
UPSTOX_API_SECRET=your_upstox_api_secret_here
UPSTOX_REDIRECT_URI=https://your-domain.com/callback

# Database Configuration
DATABASE_URL=sqlite:///data/trades.db

# Application Settings
APP_NAME=AI Options Trader Agent
APP_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# Trading Configuration
DEFAULT_PORTFOLIO_VALUE=100000
MAX_DAILY_TRADES=5
MAX_LOSS_PER_TRADE=5000
MAX_DAILY_LOSS=15000
DEFAULT_STOP_LOSS=10
DEFAULT_TAKE_PROFIT=20

# AI Configuration
MIN_CONFIDENCE_THRESHOLD=60
LEARNING_RATE=0.01
MODEL_RETRAIN_FREQUENCY=20
MAX_LEARNING_RECORDS=1000

# Risk Management
RISK_MANAGEMENT_ENABLED=true
POSITION_SIZE_PERCENT=2
MAX_PORTFOLIO_RISK=50000
MAX_POSITIONS_PER_SYMBOL=3
MAX_TOTAL_POSITIONS=10

# Market Data Configuration
MARKET_DATA_REFRESH_INTERVAL=30
PRICE_UPDATE_INTERVAL=5
OI_UPDATE_INTERVAL=60

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Report Settings
REPORT_GENERATION_ENABLED=true
AUTO_GENERATE_DAILY_REPORTS=true
REPORT_EMAIL_RECIPIENTS=trader@example.com,admin@example.com

# Security Settings
SESSION_SECRET=your_secret_session_key_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# File Storage
DATA_DIRECTORY=data
REPORTS_DIRECTORY=data/reports
MODELS_DIRECTORY=data/models
LOGS_DIRECTORY=logs

# External Services
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Performance Monitoring
ENABLE_PERFORMANCE_TRACKING=true
METRICS_COLLECTION_INTERVAL=300
MAX_LOG_FILE_SIZE=100MB
LOG_RETENTION_DAYS=30

# Paper Trading Settings
AUTO_PAPER_TRADE=true
PAPER_TRADE_SYMBOLS=NIFTY,BANKNIFTY,FINNIFTY
PAPER_TRADE_START_TIME=09:20
PAPER_TRADE_END_TIME=15:15

# Market Timings (IST)
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30
PRE_MARKET_START=09:00
POST_MARKET_END=16:00

# Options Chain Configuration
DEFAULT_STRIKES_RANGE=10
MAX_EXPIRIES_TO_SHOW=4
FILTER_LOW_VOLUME_OPTIONS=true
MIN_VOLUME_THRESHOLD=100
MIN_OI_THRESHOLD=1000

# Backup and Recovery
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Development Settings (Only for development)
MOCK_DATA_MODE=true
BYPASS_API_CALLS=true
SIMULATE_MARKET_HOURS=false
TEST_MODE=false
